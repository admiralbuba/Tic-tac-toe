@page
@model FrontEnd.Pages.IndexModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tic Tac Toe</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/script.js"></script>
    <section>
        <h1 class="game--title">Tic Tac Toe</h1>
        <h1 class="game--title" id="turnLabel">Turn now: PLayer X</h1>
        <h1 class="game--title" id="X">X : 0</h1>
        <h1 class="game--title" id="O">O : 0</h1>
        <div class="game--container">
            <input onclick="change(this)" type="button" id="A00" class="cell" value="">
            <input onclick="change(this)" type="button" id="A01" class="cell" value="">
            <input onclick="change(this)" type="button" id="A02" class="cell" value="">
            <input onclick="change(this)" type="button" id="B10" class="cell" value="">
            <input onclick="change(this)" type="button" id="B11" class="cell" value="">
            <input onclick="change(this)" type="button" id="B12" class="cell" value="">
            <input onclick="change(this)" type="button" id="C20" class="cell" value="">
            <input onclick="change(this)" type="button" id="C21" class="cell" value="">
            <input onclick="change(this)" type="button" id="C22" class="cell" value="">
        </div>
        <h2 class="game--status"></h2>
        <button class="game--restart">Restart Game</button>
    </section>
</body>
</html>